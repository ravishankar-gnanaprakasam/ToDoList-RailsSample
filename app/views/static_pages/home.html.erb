 <% if is_signed_in? %>
 	<div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/todo_form' %>
      </section>
    </aside>
    <div class="span4">
      <h3>Open Items</h3>
      <%= render 'shared/open' %>
    </div>
    <div class="span4">
      <h3>Closed Items</h3>
      <%= render 'shared/closed' %>
    </div>
  </div>
<% else %>
	<div class="center hero-unit">
		<h1>ToDo List App</h1>

		<h2>
		  This is the home page for the application
		</h2>

		<%= link_to "Sign up now!", signup_path,
		                            class: "btn btn-large btn-primary" %>
	</div>
<% end %>
