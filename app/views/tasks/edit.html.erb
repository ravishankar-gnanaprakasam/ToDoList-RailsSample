<div class="row">
    <aside class="span4">
      <section>
        <%= form_for(@task) do |f| %>
		  <%= render 'shared/error_messages', object: f.object %>
		  <div class="field">
		    <%= f.select(:status, options_for_select([['Open', 'Open'], ['Closed', 'Closed']])) %>
		    <%= f.text_field :target_dt, placeholder: 'dd/mm/yyyy' %>
		    <%= f.text_area :content, placeholder: "Compose Tasks..." %>
		  </div>
		  <%= f.submit "Update", class: "btn btn-large btn-primary" %>
		  <%= link_to "Cancel", root_path %>
		<% end %>
      </section>
  	</aside>
</div>